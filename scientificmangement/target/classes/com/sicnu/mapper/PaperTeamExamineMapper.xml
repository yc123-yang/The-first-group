<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sicnu.mapper.PaperTeamExamineMapper">

    <insert id="addPaperTeamExamineUser" parameterType="com.sicnu.pojo.teamExamine.PaperTeamExamine">
        insert into paper_team_examine
        (
        pe_id,
        user_id,
        contribution
        )
        values
        (
        #{pe_id},
        #{user_id},
        #{contribution}
        )
    </insert>

    <delete id="delPaperTeamExamineTeam" parameterType="int">
        delete from paper_team_examine
        where
        pe_id = #{pe_id}
    </delete>

    <select id="selectPaperTeamExamineById" parameterType="int" resultType="PaperTeamExamine">
        select * from paper_team_examine
        where
        pe_id = #{pe_id}
    </select>
    <select id="selectPaperTeamExamineUser" parameterType="int" resultType="com.sicnu.pojo.teamMap.PaperTeamMap">
        SELECT
        u.user_name name,u.department_id department_id,
        u.role_id role_id,
        t.contribution contribution
        FROM
        user u,
        paper_examine p,
        paper_team_examine t
        WHERE
        p.pe_id = #{pe_id}
        and
        p.pe_id = t.pe_id
        and
        t.user_id = u.user_id
    </select>


</mapper>