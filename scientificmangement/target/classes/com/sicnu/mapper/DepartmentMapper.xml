<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sicnu.mapper.DepartmentMapper">
    <insert id="addDepartmentType" parameterType="Department">
        insert into department(department_name) values(#{department_name})
    </insert>
    <delete id="delDepartmentType" parameterType="Department">
        delete from department where department_id = #{department_id}
    </delete>
    <select id="findAllDepartmentType" resultType="Department">
        select * from department
    </select>
    <select id="selectDepartmentTypeByName"  resultType="Department">
        select * from department where
        department_name = #{department_name}
    </select>
</mapper>