<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sicnu.dao.ProjectTeamDao">

    <insert id="addProjectTeam" parameterType="ProjectTeam">
        insert into project_team(
        project_id,
        user_id,
        join_time
        ) values (
        #{project_id},
        #{user_id},
        #{join_time}
        )
    </insert>

    <delete id="delProjectTeam" parameterType="ProjectTeam">
        delete from project_team
        where
        project_id =#{prject_id}
    </delete>
    <delete id="delTeamUser" parameterType="ProjectTeam">
        delete from project_team
        where
        user_id =#{user_id}
    </delete>

    <select id="selectNumberById" resultType="int">
        select count(*) from project_team where
        project_id = #{project_id}
    </select>
</mapper>