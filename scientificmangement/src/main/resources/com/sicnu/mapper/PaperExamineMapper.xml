        #{paper_name},
        #{leader_id},
        #{pt_id},
        #{periodical_id},
        #{publish_time},
        #{include_number},
        #{sc_id},
        #{subject_id},
        #{aod_id},
        #{sd_id},
        #{remark},
        #{examine_status},
        #{apply_time},
        #{reviewer_id}
