<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sicnu.mapper.AwardTeamExamineMapper">

    <insert id="addAwardExamineTeamUser" parameterType="com.sicnu.pojo.teamExamine.AwardTeamExamine">
        insert into award_team_examine
        (
        ae_id,
        user_id,
        user_role,
        contribution
        )
        values
        (
        #{ae_id},
        #{user_id},
        #{user_role},
        #{contribution}
        )
    </insert>

    <delete id="delAwardTeamExamineTeam" parameterType="int">
        delete from award_team_examine
        where
        ae_id = #{ae_id}
    </delete>

    <select id="selectAwardTeamExamineById" parameterType="int" resultType="AwardTeamExamine">
        select * from award_team_examine
        where
        ae_id = #{ae_id}
    </select>
    <select id="selectAwardTeamExamineUser" parameterType="int" resultType="com.sicnu.pojo.teamMap.AwardTeamMap">
        SELECT
        u.user_name name,u.department_id department_id,
        u.role_id role_id,
        t.contribution contribution
        FROM
        user u,
        award_examine a,
        award_team_examine t
        WHERE
        a.ae_id = #{ae_id}
        and
        a.ae_id = t.ae_id
        and
        t.user_id = u.user_id
    </select>

</mapper>